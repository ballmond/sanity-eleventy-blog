{% set style = "display: flex; justify-content: left; width: 100%; border-radius: 8px; box-shadow: 0px 3px 5px rgba(0,0,0,.18)" %}
<div>
  <article style="{{ style }}">
    <div>
      <a href="{{ item.url }}"><h3>{{ item.data.post.title }}</h3></a>
      <p>{{ item.data.post.excerpt }}</p>
      <p>Posted {{ item.data.post.publishedAt | publishedAt }}</p>
    </div>
  </article>
</div>