{% set style = "display: flex; justify-content: left; width: 100%; border-radius: 8px; box-shadow: 0px 3px 5px rgba(0,0,0,.18)" %}
<div>
  <article style="{{ style }}">
    <div>
      <a href="{{ sermon.url }}"><h3>{{ sermon.data.sermon.title }}</h3></a>
      <p>{{ sermon.data.sermon.excerpt}}</p>
      {%- if sermon.data.sermon.audioUrl %}<a href="{{ sermon.data.sermon.audioUrl | url }}" target="_blank">Listen</a>{% endif %}
      {%- if sermon.data.sermon.videoUrl %}<a href="{{ sermon.data.sermon.videoUrl | url }}" target="_blank">Watch</a>{% endif %}
    </div>
  </article>
</div>